<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drrabny.darrbyproject.Fragments.ExperianceFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="40"
            android:background="@color/blackM"
            android:layout_height="0dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/whiteM"
                android:text="Experience"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="60"
            android:layout_height="0dp"
            android:background="@color/white1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                >
                <Button
                    android:id="@+id/addExper_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@color/blackM"
                    android:textColor="@color/whiteM"
                    android:text="Add experiemcr"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="70dp"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView_Experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:scrollbars="vertical"
            ></android.support.v7.widget.RecyclerView>
    </FrameLayout>

</FrameLayout>
