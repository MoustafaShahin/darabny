<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drrabny.darrbyproject.Fragments.FeedFragment"
    android:orientation="vertical"
    android:background="@color/Darabnii_white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_recommended_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended Training Posts "
                android:background="@color/white"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_recommended_trainingPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />

            <TextView
                android:id="@+id/txt_recommended_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended Companies "
                android:background="@color/white"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_recommended_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/txt_training_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trainning posts"
                android:background="@color/white"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_trainingPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
