<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.drrabny.darrbyproject.Fragments.AddLanguageFragment">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="600dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".4"
                    android:background="@color/barrbny">
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".6">
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".06"
                    android:fontFamily="@font/cairosemibold"
                    android:gravity="center"
                    android:text="ADD LANGUAGE"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".40"
                    android:weightSum="1"
                    android:gravity="center">

                    <android.support.v7.widget.CardView
                        android:paddingTop="10dp"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_weight=".8"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/barrbny"
                        app:cardPreventCornerOverlap="false">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".015"
                                android:layout_marginBottom="20dp"
                                android:background="@color/barrbny"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/lang_name"
                                    android:paddingLeft="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/cairolight"
                                    android:hint="English"
                                    android:textColorHint="@color/colorPrimaryDark"
                                    android:paddingBottom="5dp"
                                    android:textAllCaps="false"
                                    android:textAlignment="textStart"
                                    android:textSize="17dp"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:background="@drawable/button_border"/>
                                <RatingBar
                                    android:id="@+id/lang_rate"
                                    android:background="@color/barrbny"
                                    android:layout_width="96dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:paddingTop="11dp"
                                    android:numStars="5"
                                    style="@style/myratingbarr"
                                    />


                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".20">
                    <Button
                        android:id="@+id/lang_add"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:layout_marginRight="33dp"
                        android:layout_marginLeft="33dp"
                        android:background="@drawable/button_border2"
                        android:fontFamily="@font/cairoregular"

                        />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>
