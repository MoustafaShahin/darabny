<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.drrabny.darrbyproject.Fragments.UpdatePasswordFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="600dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".4"
                    android:background="@color/barrbny">
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".6">
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">



                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".07"
                    android:fontFamily="@font/cairosemibold"
                    android:gravity="center"
                    android:text="UPDATE PASSWORD"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight=".55"
                    android:weightSum="1"
                    android:gravity="center">

                    <android.support.v7.widget.CardView
                        android:paddingTop="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight=".8"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardPreventCornerOverlap="false">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:orientation="vertical">


                            <EditText
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:fontFamily="@font/cairolight"
                                android:hint="Current Password"
                                android:textAllCaps="false"
                                android:inputType="textPassword"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/current_pass_txt"
                                android:textColor="@color/blue"
                                android:textAlignment="textStart"
                                android:layout_marginTop="5dp"
                                android:textSize="17dp"
                                android:background="@drawable/button_border"/>

                            <EditText
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:fontFamily="@font/cairolight"
                                android:hint="New Password"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/newPass_txt"
                                android:textAllCaps="false"
                                android:textColor="@color/blue"
                                android:inputType="textPassword"
                                android:textAlignment="textStart"
                                android:layout_marginTop="5dp"
                                android:textSize="17dp"
                                android:background="@drawable/button_border"/>

                            <EditText
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:fontFamily="@font/cairolight"
                                android:textAllCaps="false"
                                android:hint="Repeat New password"
                                android:textColor="@color/blue"
                                android:textAlignment="textStart"
                                android:layout_marginTop="5dp"
                                android:textSize="17dp"
                                android:id="@+id/Re_pass_txt"
                                android:inputType="textPassword"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/button_border"/>


                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".25">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/colorPrimaryDark"
                        android:id="@+id/SaveUpdatePass"
                        />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>
